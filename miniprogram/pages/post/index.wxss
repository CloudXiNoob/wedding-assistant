.wrap {
  padding: 0 15rpx;
  box-sizing: border-box;
  background: #fff; }

.tips {
  padding: 10rpx 0;
  font-size: 26rpx;
  color: #f34; }

.input-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx; }
  .input-item .label {
    width: 160rpx;
    font-size: 28rpx;
    color: #333;
    text-align: right; }
  .input-item .item {
    width: 560rpx;
    height: 60rpx;
    margin-left: 40rpx;
    padding-left: 20rpx;
    border: 1rpx solid #f6f6f6;
    border-radius: 6rpx;
    font-size: 28rpx;
    color: #333; }
  .input-item .placeholder {
    font-size: 24rpx;
    color: #999; }
  .input-item .picker {
    font-size: 28rpx;
    color: #333;
    line-height: 60rpx; }

.textarea-item {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30rpx; }
  .textarea-item .label {
    width: 160rpx;
    font-size: 28rpx;
    color: #333;
    text-align: right; }
  .textarea-item .item {
    width: 560rpx;
    height: 120rpx;
    margin-left: 40rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    border: 1rpx solid #f6f6f6;
    border-radius: 6rpx;
    font-size: 28rpx;
    color: #333; }

.commitBtn {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 40rpx auto;
  background: #f34;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 6rpx; }
